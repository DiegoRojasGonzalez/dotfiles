# CPU Usage
[cpu]
command=top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print 100 - $1 "%"}'
interval=2
label=ğŸ–¥ï¸ CPU

[processes]
command=ps aux | wc -l
interval=60
label=ğŸ”²


# RAM Usage
[memory]
command=free -h | awk '/^Mem:/ {print $3 "/" $2}'
interval=10
label=ğŸ’» RAM

[battery]
command=acpi -b | awk -F', ' '{print $2 " " $3}' | sed 's/%,//;s/>
interval=20
label=ğŸ”‹ Battery

[volume]
command=pactl get-sink-volume @DEFAULT_SINK@ | awk -F'/' '{print $2}' | awk '{print $1}'
interval=1
label=ğŸ”Š

# Disk Usage
