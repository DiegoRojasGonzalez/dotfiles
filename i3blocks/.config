# Weather
[weather]
command=curl -s wttr.in/Talca?format=3
interval=3600
label=

[clock]
command=date '+%I:%M:%S %p'
interval=1
label=🕒

# CPU Usage
[cpu]
command=top -bn1 | grep "Cpu(s)" | sed "s/.*, *\([0-9.]*\)%* id.*/\1/" | awk '{print 100 - $1 "%"}'
interval=2
label=🖥️ CPU

[processes]
command=ps aux | wc -l
interval=60
label=🔲


# RAM Usage
[memory]
command=free -h | awk '/^Mem:/ {print $3 "/" $2}'
interval=10
label=💻 RAM

[battery]
command=acpi -b | awk -F', ' '{print $2 " " $3}' | sed 's/%,//;s/>
interval=20
label=🔋 Battery

[volume]
command=pactl get-sink-volume @DEFAULT_SINK@ | awk -F'/' '{print $2}' | awk '{print $1}'
interval=1
label=🔊

# Disk Usage
[disk]
command=df -h | awk '$NF=="/"{print $3 "/" $2}'
interval=60
label=💾

# Network
[ip]
command=hostname -I | awk '{print $1}'
interval=3000
label=🌍

[ping]
command=speedtest-cli --simple | grep 'Ping' | cut -d ' ' -f2
interval=3000
label=📡

[download]
command=speedtest-cli --simple | grep 'Download' | cut -d ' ' -f2
interval=3000
label=⬇️

[upload]
command=speedtest-cli --simple | grep 'Upload' | cut -d ' ' -f2
interval=3000
label=⬆️

